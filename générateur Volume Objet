public class GenerateurObjet {

// Fonction permettant de générer une hauteur et une largeur pour x objets

	public Volume[] generateurVolume ( int hauteurmin, int largeurmin, int hauteurmax, int largeurmax, int nombreObjet)
	{
		int i;
		Volume[] tableauObjet = new Volume[nombreObjet];
	
		for (i=1;i<=nombreObjet;i++) {
		Volume.largeur =  (int) (Math.random() * (largeurmax - largeurmin) + largeurmin);
		Volume.hauteur =  (int) (Math.random() * (hauteurmax - hauteurmin) + hauteurmin);
		
//		mettre l'objet dans le tableau
		Volume[i] = <hauteur et largeur de l''objet créer>;
		}
	}
		
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
// on demande à l'utilisateur d'entrer un nombre d'objet à créer
		
		int nombreObjet;
		Scanner sc = new Scanner(System.in);
		System.out.println("entrer le nombre de pièces à créer");
		nombreObjet = sc.nextInt();
	}

}
